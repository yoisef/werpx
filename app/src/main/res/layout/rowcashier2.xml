<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginBottom="3dp"
    android:focusableInTouchMode="true"
    android:layout_marginTop="3dp"
    android:background="@drawable/rowshape" android:layout_width="match_parent"
    android:layout_height="125dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/rowshape"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="0dp"
                android:src="@drawable/default_product"
                android:background="@drawable/dashedline"
                android:padding="5dp"
                android:id="@+id/productimg2"
                android:layout_marginEnd="3dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="2.2"
                android:layout_height="match_parent" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="5"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/large"
                    android:singleLine="true"
                    android:id="@+id/nameproduct2"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:layout_gravity="top|start"
                    android:text="Name"
                    android:layout_margin="3dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:text="@string/unitprice"
                        android:gravity="start"
                        android:textSize="@dimen/medium"
                        android:textColor="@color/black"
                        android:layout_margin="3dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textSize="@dimen/medium"
                        android:id="@+id/unitpricec2"
                        android:text="50"
                        android:gravity="start"

                        android:textColor="@color/black"
                        android:layout_margin="3dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:textSize="@dimen/medium"
                    android:gravity="start"
                    android:singleLine="true"
                    android:id="@+id/numberproduct2"
                    android:text="barcode"
                    android:textColor="@color/black"
                    android:layout_margin="3dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="2.2"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="8dp"

                    android:layout_marginStart="5dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="5dp"

                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="0dp"
                        android:src="@drawable/ic_add_black_24dp"
                        android:padding="3dp"
                        android:background="@drawable/button"
                        android:textStyle="bold"
                        android:id="@+id/additemsc2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/large"
                        android:layout_weight="1.5"
                        android:layout_height="match_parent" />
                    <EditText
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:background="@drawable/editbutton2"
                        android:textSize="@dimen/medium"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:id="@+id/itemsnumberc2"
                        android:layout_weight="2"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:layout_width="0dp"
                        android:padding="3dp"
                        android:src="@drawable/ic_remove_black_24dp"
                        android:background="@drawable/button"
                        android:id="@+id/removeitemsc2"
                        android:layout_weight="1.5"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:padding="5dp"
                    android:inputType="numberDecimal"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="0.0"
                    android:id="@+id/totalitemsc2"
                    android:textSize="@dimen/medium"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/dashedline"
                    />
            </LinearLayout>
        </LinearLayout>



</LinearLayout>



