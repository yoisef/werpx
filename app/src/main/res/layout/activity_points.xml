<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarpoint"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="@color/appcolor">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/xlarge"
            android:textColor="@color/black"
            android:gravity="start"
            android:text="@string/points"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>
<ScrollView
    android:layout_width="match_parent"
    android:background="@color/appcolor"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/pointimg"
            android:layout_width="115dp"
            android:layout_height="107dp"
            android:background="@drawable/square"
            android:padding="5dp"
            android:src="@drawable/ic_shop"
            />
        <TextView
            android:id="@+id/pointstorename"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_height="wrap_content"
            android:text="@string/storenam"
            android:textColor="@color/black"
            android:textSize="@dimen/xx_large"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/pointcredittxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/points"
            android:textColor="@color/black"
            android:textSize="@dimen/xlarge"
            />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/editbut3"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/pointcreditnum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:padding="10dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="@dimen/xxxlarge"
            android:textStyle="bold"
            />
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_height="wrap_content" />
        </FrameLayout>
        <TextView
            android:id="@+id/pointexchange"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/circlestar"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/replacement"
            android:textColor="@color/black"
            android:textSize="@dimen/xlarge"
            android:textStyle="bold"
            />

    </LinearLayout>



</ScrollView>
</LinearLayout>