<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Layout to contain contents of main body of screen (drawer will slide over this) -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:minHeight="?attr/actionBarSize"
                android:layout_width="match_parent"
                app:contentInsetEnd="0dp"
                app:contentInsetStart="0dp"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                android:layout_height="wrap_content"
                app:titleTextColor="@android:color/white"
                android:background="@color/appcolor">

              <LinearLayout
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="30dp"
        android:src="@drawable/logoo"
        android:layout_height="30dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nameappwithimg"
                    android:textSize="@dimen/large"
                    android:textColor="@color/black"
                    android:textStyle="bold"

                    android:id="@+id/toolbar_title" />
</LinearLayout>

                <ImageView
                    android:id="@+id/aboutus"
                    android:padding="10dp"
                    android:layout_gravity="end|center"



                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/barcod2"
                    />


            </android.support.v7.widget.Toolbar>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:background="@color/appcolor"
                android:id="@+id/productrecycle"
                android:layout_height="0dp"
                android:layout_weight="1"></android.support.v7.widget.RecyclerView>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@color/appcolor"
                android:gravity="center"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="230dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/totalpricec"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="@dimen/large"
                        android:textStyle="bold"
                        android:layout_marginStart="35dp"
                        android:layout_marginEnd="20dp"


                        android:text="0.00"
                        android:textColor="@color/black"
                        android:background="@drawable/gradientgray"
                        android:layout_height="70dp" />
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="80dp"
                        android:text="@string/pay"
                        android:inputType="number"
                        android:id="@+id/paylayout"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/large"
                        android:textStyle="bold"

                        android:background="@drawable/circle"
                        android:layout_height="80dp" />
                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:id="@+id/payprogress"
                            android:visibility="gone"
                            android:layout_height="wrap_content" />
                    </FrameLayout>

                </FrameLayout>

            </LinearLayout>


        </LinearLayout>

    </FrameLayout>







    <!-- Container for contents of drawer - use NavigationView to make configuration easier -->
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/menu"
        android:theme="@style/NavigationDrawerStyle"
        app:headerLayout="@layout/headernav"
        android:layout_gravity="start"
        android:fitsSystemWindows="true" />

</android.support.v4.widget.DrawerLayout>
















