<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/myframecamera"
    android:layout_height="match_parent"
    tools:context=".Cashiery.Camera_activity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <SurfaceView
            android:id="@+id/camera_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/black"
                android:alpha=".5"
                android:layout_alignParentTop="true"
                android:layout_height="120dp"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/black"
                android:alpha=".5"
                android:layout_alignParentBottom="true"
                android:layout_height="120dp"></LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/graytransparent"
            android:orientation="horizontal"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="200dp"
            android:visibility="gone"
            android:id="@+id/mydetect"
            android:layout_gravity="center"
            android:layout_height="140dp">
        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:padding="30dp"
            android:id="@+id/leaserline"

            android:layout_marginTop="25dp"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="110dp"
            android:background="@color/blood"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:layoutDirection="ltr"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:text="@string/camerausage"
                android:id="@+id/resultmyscan"
                android:gravity="center"
                android:textSize="@dimen/x_small"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Switch
            android:id="@+id/switchtorch"
            android:layout_width="wrap_content"
            android:layout_gravity="top|center"
            android:layout_height="wrap_content"
            android:textOff="OFF"
            android:textOn="ON"
            android:textColor="@color/green"
            android:theme="@style/myswitch"
            android:textSize="20sp"
            android:text="Flash" />
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:visibility="visible"
        android:focusableInTouchMode="false"
        android:id="@+id/showprodetail"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/productshowdetailslayout"

            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/rowshape"
                android:layout_height="125dp">
                <ImageView
                    android:layout_width="0dp"
                    android:src="@drawable/default_product"
                    android:background="@drawable/dashedline"
                    android:padding="5dp"
                    android:id="@+id/imgcam"
                    android:layout_marginEnd="3dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="4"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/large"
                        android:id="@+id/nampcam"
                        android:gravity="start"
                        android:textColor="@color/black"
                        android:layout_gravity="top|start"
                        android:text="@string/product"
                        android:singleLine="true"
                        android:layout_margin="3dp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:text="@string/unitprice"
                            android:gravity="start"
                            android:textSize="@dimen/medium"
                            android:textColor="@color/black"
                            android:layout_margin="3dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textSize="@dimen/medium"
                            android:id="@+id/pricecam"
                            android:text="0"
                            android:gravity="start"

                            android:textColor="@color/black"
                            android:layout_margin="3dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="bottom|start"
                        android:textSize="@dimen/medium"
                        android:gravity="start"
                        android:id="@+id/barcam"
                        android:text="@string/barcode"
                        android:textColor="@color/black"
                        android:layout_margin="3dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="8dp"

                        android:layout_marginStart="5dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="5dp"

                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="0dp"
                            android:src="@drawable/ic_add_black_24dp"
                            android:padding="5dp"
                            android:background="@drawable/button"
                            android:textStyle="bold"
                            android:id="@+id/addcam"
                            android:textColor="@color/black"
                            android:textSize="@dimen/large"
                            android:layout_weight="1.5"
                            android:layout_height="match_parent" />
                        <EditText
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:background="@drawable/editbutton2"
                            android:textSize="@dimen/medium"
                            android:singleLine="true"
                            android:inputType="number"
                            android:imeOptions="actionDone"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="1"
                            android:id="@+id/itemnumbercam"
                            android:layout_weight="2"
                            android:layout_height="match_parent" />
                        <ImageView
                            android:layout_width="0dp"
                            android:padding="5dp"
                            android:src="@drawable/ic_remove_black_24dp"
                            android:background="@drawable/button"
                            android:id="@+id/removecam"
                            android:layout_weight="1.5"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:text="0.0"
                        android:id="@+id/totalcam"
                        android:textSize="@dimen/large"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/dashedline"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/adjustprice"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/medium"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/editprice"
                    android:inputType="numberDecimal"

                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/update"
                    android:padding="5dp"
                    android:id="@+id/updateprice"
                    android:textColor="@color/black"
                    android:textSize="@dimen/medium"
                    android:background="@drawable/button"
                    android:layout_height="wrap_content" />
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:visibility="visible"
                android:id="@+id/confirmlayout"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"

                    android:text="@string/done"
                    android:layout_marginEnd="30dp"
                    android:gravity="center"
                    android:padding="3dp"

                    android:textSize="@dimen/large"
                    android:id="@+id/donecam"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:background="@drawable/button"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:layout_marginStart="30dp"
                    android:id="@+id/cancelcam"
                    android:textStyle="bold"
                    android:textSize="@dimen/large"
                    android:textColor="@color/black"
                    android:text="@string/cancelcamera"
                    android:gravity="center"
                    android:background="@drawable/button"
                    android:layout_margin="5dp"

                    android:layout_height="match_parent" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/addnewproductlayuout"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:textSize="@dimen/large"
                android:textStyle="bold"
                android:background="@color/gray"
                android:text="@string/addproduct"
                android:padding="5dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"/>

            <EditText
                android:layout_width="wrap_content"
                android:id="@+id/addprice"
                android:layout_gravity="center"
                android:textColorHint="@color/darkgray"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:hint="@string/addprice"
                android:layout_margin="5dp"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/large"
                    android:padding="3dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/button"
                    android:textStyle="bold"
                    android:id="@+id/addproductt"
                    android:gravity="center"
                    android:text="@string/addit"
                    android:textColor="@color/black"
                    android:layout_height="match_parent" />
                <View
                    android:layout_width="1dp"
                    android:background="@color/white"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_width="0dp"
                    android:id="@+id/cancelproduct"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/button"
                    android:textColor="@color/black"
                    android:textSize="@dimen/large"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="@string/cancelcamera"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/darkgray"/>

        </LinearLayout>
        </RelativeLayout>

        <ProgressBar
            android:layout_width="60dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:id="@+id/waitwhileadd"
            android:layout_height="60dp" />





</LinearLayout>